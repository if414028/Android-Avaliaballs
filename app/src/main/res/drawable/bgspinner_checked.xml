<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#ffffff" android:type="linear" />

                    <stroke android:width="2dp" android:color="#b3b3b3" />

                    <corners android:radius="100dp" />

                    <padding android:bottom="@dimen/size5" android:left="@dimen/size5" android:right="@dimen/size5" android:top="@dimen/size5" />
                </shape>
            </item>

            <item android:right="2dp">

                <bitmap android:gravity="center_vertical|right" android:tint="#b3b3b3" android:src="@drawable/icon_dropdown" />

            </item>

        </layer-list>

    </item>

</selector>