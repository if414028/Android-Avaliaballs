<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
            android:id="@+id/tvNo"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:textAlignment="gravity"
            android:textSize="12sp"
            app:font="@string/font_roboto" />

        <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
            android:id="@+id/tvNamaLapangan"
            android:layout_width="139dp"
            android:layout_height="40dp"
            android:layout_alignRight="@id/tvNo"
            android:layout_toEndOf="@+id/tvNo"
            android:layout_toRightOf="@+id/tvNo"
            android:gravity="left|center"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:textStyle="bold"
            app:font="@string/font_roboto" />

        <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
            android:id="@+id/tvLokasi"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:textAlignment="gravity"
            android:textSize="12sp"
            app:font="@string/font_roboto" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View

                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/clrline" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>