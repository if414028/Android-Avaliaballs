<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="bolalob.develops.stud11314025.availaballs.Activity.MainActivity">

    <include
        layout="@layout/recycleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Lokasi"
        android:textColor="@color/clrtxt1"
        app:font="@string/font_roboto"
        android:visibility="gone"
        android:id="@+id/customFontTextView"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextNamaLapangan"
        android:layout_toEndOf="@+id/TextNamaLapangan" />


    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font="@string/font_roboto"
        android:textSize="12sp"
        android:textColor="@color/clrtxt1"
        android:text="No"
        android:id="@+id/TextNo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/TextNamaLapangan"
        app:font="@string/font_roboto"
        android:textColor="@color/clrtxt1"
        android:text="Nama Lapangan"
        android:visibility="gone"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextNo"
        android:layout_toEndOf="@+id/TextNo" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/clrtxt1"
        android:gravity="center_horizontal"
        android:text="Belum ada Data Lapangan yang masuk"
        android:textStyle="italic"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="140dp"
        android:src="@drawable/emptydata"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontButton
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size30"
        android:text="..."
        android:background="@drawable/rectanglebutton"
        android:textColor="@color/colorstate"
        app:font="@string/font_stoke"
        android:textSize="6sp"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/button4"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontButton
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size30"
        android:text="3"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/button3"
        android:layout_centerInParent="true"
        app:font="@string/font_roboto"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectanglebutton"
        android:textColor="@color/colorstate"
        android:layout_marginBottom="70dp"
        android:textSize="@dimen/font12" android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontButton
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size30"
        android:text="2"
        app:font="@string/font_roboto"
        android:textSize="@dimen/font12"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/button2"
        android:background="@drawable/rectanglebutton"
        android:textColor="@color/colorstate"
        android:layout_alignBottom="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/button3" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontButton
        android:text="1"
        android:layout_height="@dimen/size30"
        android:id="@+id/button1"
        app:font="@string/font_roboto"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/rectanglebutton"
        android:textColor="@color/colorstate"
        android:textSize="@dimen/font10"
        android:layout_width="@dimen/size30"
        android:layout_alignBottom="@+id/button4"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontButton
        android:layout_width="30dp"
        android:layout_height="@dimen/size30"
        android:text="10"
        app:font="@string/font_roboto"
        android:textSize="@dimen/font12"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/button5"
        android:background="@drawable/rectanglebutton"
        android:textColor="@color/colorstate"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/buttonBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="+ Lapangan"
        android:textColor="@color/clrpressed"
        android:height="@dimen/size40"
        android:fontFamily="@string/font_roboto"
        android:background="@drawable/rectanglebuttonbottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="tambahLapangan"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:background="@drawable/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />


</RelativeLayout>
