<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lychildHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <View

            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/clrline" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerJamBukaSenin"
                    style="@style/SpinnerThemeWhite"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/array_itemjam" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="-"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerJamTutupSenin"
                    style="@style/SpinnerThemeWhite"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/array_itemjam" />

                <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
                    android:id="@+id/iconHargaAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="@string/icon_add"
                    android:textColor="@color/clrAddLpng"
                    android:textSize="20sp"
                    app:font="@string/font_icon"></bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView>

                <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
                    android:id="@+id/iconHargaRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="@string/icon_remove"
                    android:textColor="@color/colorSnackbar"
                    android:textSize="20sp"
                    app:font="@string/font_icon"></bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size20"
                android:background="@drawable/hargabutton"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
                    android:id="@+id/iconHargaSeninTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="Rp"
                    android:textColor="@color/clrlinedark"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:font="@string/font_icon">

                </bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtInputHargaSenin"
                    android:layout_width="240dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:theme="@style/TextLabelLogin">

                    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontEditTextView
                        android:id="@+id/eTHargaSenin"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginBottom="12dp"
                        android:background="@android:color/transparent"
                        android:drawableTint="@color/clrline"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:textColor="@color/clrlinedark"
                        android:textColorHighlight="@color/clrlinedark"
                        android:textSize="16dp"
                        android:textStyle="normal"
                        app:font="@string/font_roboto" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>