<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upload_frame"
    android:layout_width="300dp"
    android:layout_height="140dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/uploadfotobutton"
        android:gravity="center">

        <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
            android:id="@+id/iconCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_lapangan"
            android:textSize="20dp"
            app:font="@string/icon_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="upload foto lapanganmu &#10; *720*340px"
            android:textColor="#808080"
            android:textStyle="italic" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_upload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="center" />


</FrameLayout>